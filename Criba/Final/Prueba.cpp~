#include "mpi.h"
#include <time.h> 
#include <stdio.h> 
#include <vector>
#include <omp.h>
#include <math.h> 

using namespace std;

#define	Size 48615 //Para sacar 5000 numeros primos

	int 	 
		maxSize, 
		rootSize,
		id,
		p,	
		ierr;

	bool 	BoolNum[Size][3];
  	double  wtime;
        MPI_Status status;
	

void invalid_Noprime(int n){


if(id==2||id==3){
for (int i = 2 + id-1; i <= sqrt(n) ; i = i+2){
        if(BoolNum[i][id-1]==true) {
		maxSize = Size/i;
        	for(int h = 2; h <= maxSize; ++h){
        		BoolNum[i*h][id-1]= false;             
                        }
		}

	}
}

	if(id==1){

		for(int i = 2 ; i <= n ; i++){
			if(BoolNum[i][2]==false || BoolNum[i][1]==false){BoolNum[i][0]=false;}
		}

	}

}

void criba(){

    BoolNum[0][0] = false;
    BoolNum[1][0] = false;
for(int a=0; a<3;a++){
    for(int i = 2; i <= Size; ++i){
        BoolNum[i][a] = true;
	}}

    rootSize = sqrt(Size);
    invalid_Noprime(Size);
	
    }
 


float timing(int iteraciones){
	
	double start, end, time, time_P; 
	 
	for(int a =0; a<iteraciones; a++){
		if(id==1)
			start = omp_get_wtime();

		criba();

		if(id==1){
			end = omp_get_wtime();
		
			float time = (end-start);
			time = end-start;
			time_P = time_P + time;
		}
	}

	if(id==1){
		time_P = time_P/(iteraciones); 
		printf("The time was: %f ms\n", time_P*1000 );
	}
	return time_P;
	
	}



int main(int argc,char *argv[]) 
{ 
	int iteraciones=3000;
	int cant_primes=0;

	ierr = MPI_Init ( &argc, &argv );
  	ierr = MPI_Comm_size ( MPI_COMM_WORLD, &p );
	//printf("#P: %d \n", p);
  	ierr = MPI_Comm_rank ( MPI_COMM_WORLD, &id );
	float Time1 = timing(iteraciones);
	
	if(id==1){
	for(int c=0; c<48615;c++){
		if(BoolNum[c][0]==true)	cant_primes++;
	}

	printf("Cantidad de primos %d \n", cant_primes);
}
	ierr = MPI_Finalize ( );
return 0; 
}

